{
  "compilerOptions": {
    "outDir": "./dist-server",
    "rootDir": "./",
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node", "sequelize", "bcrypt", "jest"]
  },
  "include": ["server/**/*.ts", "server/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist-server"]
}
